@model VISHWASAMUDRA.Models.LoginUser

@{

    ViewBag.Title = "Index";
 }

<!-- <div class="card">-->
@using (Html.BeginForm("Test", "Login", FormMethod.Post))
{
             <style>
                 img {
                     width: 550px;
                     height: 500px;
                 }
             </style>
             <div class="container-fluid h-custom">
                 <div class="row d-flex justify-content-center align-items-center h-100">
                     <div class="col-md-9 col-lg-6 col-xl-6 my-lg-5 py-lg-5">
                         <img src="~/VSEPL.jpg" />
                     </div>
                     <div class="col-md-8 col-lg-6 col-xl-5 offset-xl-1 my-lg-5 py-lg-5">
                         <form>
                             <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                                 <p class="lead fw-normal mb-0 me-3">Login into your account</p>
                             </div>
                             <br /> <br />
                             <!-- Email input -->
                             <div class="form-outline mb-4">
                                 <label class="form-label"  for="form3Example3" style="margin-left: 0px;">Email address</label>
                                 @Html.EditorFor(Model=>Model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                 @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                 <!-- <input type="email" id="form3Example3" class="form-control form-control-sm" placeholder="Enter a valid email address">-->
                              </div>

                             <!-- Password input -->
                             <div class="form-outline mb-4">
                                 <label class="form-label" for="form3Example4" style="margin-left: 0px;">Password</label>
                                 @Html.PasswordFor(model => model.Userpwd, new { @class = "form-control" } )
                                 @Html.ValidationMessageFor(model => model.Userpwd, "", new { @class = "text-danger" })
                                 <!--<input type="password" id="form3Example4" class="form-control form-control-sm">-->
                             </div>
                                 <div class="d-flex justify-content-between align-items-center">
                                     <!-- Checkbox -->
                                     <div class="form-check mb-0">
                                         <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3">
                                         <label class="form-check-label" for="form2Example3">
                                             Remember me
                                         </label>
                                     </div>
                                 </div>
                                 <div class="text-center ">
                                     <input type="submit" value="Login" class="btn btn-primary" />
                                     <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="#!" class="link-danger">Register</a></p>
                                 </div>
                         </form>
                     </div>
                 </div>
             </div>
}
@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
}
